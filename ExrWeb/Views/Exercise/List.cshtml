@using ExrWeb.Models
@model List<ExrWeb.Models.Exercise>

@{
    ViewBag.Title = "List";
}

<h2>Exercise List</h2>
<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Machine</th>
            <th>#reps</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>


        @foreach (Exercise ex in Model)
        {
            <tr>
                <td>@ex.Machine</td>
                <td>@ex.NumReps</td>
            <td>@ex.ExDate</td>
        </tr>
        }

        </tbody>
</table>
